{
  "name": "@appist/appkit-ui",
  "version": "0.0.0-development",
  "description": "A minimalist UI framework for developing responsive, mobile first on the web using Svelte and Tailwind CSS.",
  "main": "src/index.ts",
  "files": [
    "src"
  ],
  "scripts": {
    "sb": "start-storybook --docs --port 6006 --no-manager-cache",
    "sb:build": "build-storybook --docs",
    "sb:preview": "npm run sb:build && serve storybook-static",
    "sb:chromatic": "chromatic --project-token=CHROMATIC_PROJECT_TOKEN --exit-zero-on-changes",
    "semantic-release": "semantic-release",
    "test": "jest",
    "validate": "svelte-check"
  },
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "branches": [
      "main",
      "next"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/appist/appkit-ui.git"
  },
  "keywords": [
    "appkit",
    "storybook",
    "svelte",
    "tailwindcss"
  ],
  "author": {
    "name": "cayter",
    "email": "cayter@appist.io"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/appist/appkit-ui/issues"
  },
  "homepage": "https://github.com/appist/appkit-ui#readme",
  "devDependencies": {
    "@babel/core": "^7.13.14",
    "@storybook/addon-actions": "^6.2.1",
    "@storybook/addon-docs": "^6.2.1",
    "@storybook/addon-essentials": "^6.2.1",
    "@storybook/addon-links": "^6.2.1",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/addon-svelte-csf": "^1.0.0",
    "@storybook/svelte": "^6.2.1",
    "@tailwindcss/aspect-ratio": "^0.2.0",
    "@tailwindcss/forms": "^0.3.2",
    "@tailwindcss/line-clamp": "^0.2.0",
    "@tailwindcss/typography": "^0.4.0",
    "@tsconfig/svelte": "^1.0.10",
    "babel-loader": "^8.2.2",
    "chromatic": "^5.7.0",
    "cssnano": "^4.1.10",
    "postcss": "^8.2.9",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-import": "^14.0.1",
    "postcss-load-config": "^3.0.1",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.2.1",
    "prettier-plugin-svelte": "^2.2.0",
    "semantic-release": "^17.4.2",
    "serve": "^11.3.2",
    "svelte": "^3.37.0",
    "svelte-check": "^1.3.0",
    "svelte-loader": "^3.0.0",
    "svelte-preprocess": "^4.7.0",
    "tailwindcss": "^2.0.4",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "@iconify-icons/heroicons-outline": "^1.1.1",
    "@iconify-icons/heroicons-solid": "^1.1.0",
    "@iconify/svelte": "^1.0.4",
    "clsx": "^1.1.1"
  }
}
